1.
#include<bits/stdc++.h>
using namespace std;
int factorial(int a)
{
    if(a==1)
    {
        return a;
    }
    int ans = a*factorial(a-1);
    return ans;
}
int main()
{
    int a = 5;
    cout<<factorial(a);
    return 0;
}


2.
#include<bits/stdc++.h>
using namespace std;
int factorial(int a)
{
    if(a==0)
    return 1;
    
    return a*factorial(a-1);
}
int main()
{
    int a = 5;
    int ans = factorial(a);
    cout<<"My Factorial Ans is:"<<ans;
    return 0;
}
